# PostgreSQL Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=astrogators_db

# This connection string is used by Prisma to connect to the database.
# For local development connecting to the Docker container, 'localhost' is correct.
DATABASE_URL="postgresql://user:password@localhost:5432/astrogators_db"

# SWGOH Comlink Service
# The URL should point to the comlink service. 'localhost' is for local development.
SWGOH_COMLINK_URL=http://localhost:3200

# A simple secret key to protect the comlink service from unauthorized access.
SWGOH_COMLINK_ACCESS_KEY=your_comlink_access_key_here

# Discord Webhook for Notifications
DISCORD_WEBHOOK_URL=

# Logging Configuration
# Defines the minimum level of logs to record.
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
